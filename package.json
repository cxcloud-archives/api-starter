{
  "name": "cxcloud-demo-facade",
  "version": "0.1.0",
  "description": "CXCloud Facade Demo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run swagger",
    "start": "ts-node src/index.ts | bunyan",
    "start:production": "node dist/index.js",
    "dev": "npm run swagger && nodemon",
    "swagger": "swaggerGen -c ./swagger.config.json",
    "format": "prettier --write 'src/**/*.ts'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cxcloud/api-accelerator.git"
  },
  "author": "CXCloud",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cxcloud/api-accelerator/issues"
  },
  "homepage": "https://github.com/cxcloud/api-accelerator#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "config": "^1.27.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-api-error-handler": "^1.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/bunyan": "^1.8.3",
    "@types/config": "0.0.33",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.45",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.17.1",
    "prettier": "^1.7.4",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2",
    "typescript-rest": "^1.2.2",
    "typescript-rest-swagger": "0.0.17"
  }
}
